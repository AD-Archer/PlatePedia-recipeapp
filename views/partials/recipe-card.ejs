<div class="col">
    <div class="card h-100">
        <% if (recipe.imageUrl) { %>
            <img src="<%= recipe.imageUrl %>" class="card-img-top" alt="<%= recipe.title %>" style="height: 200px; object-fit: cover;">
        <% } %>
        <div class="card-body">
            <h5 class="card-title">
                <a href="/recipes/<%= recipe.id %>" class="text-decoration-none"><%= recipe.title %></a>
            </h5>
            <% if (recipe.author) { %>
                <p class="card-text text-muted">by <%= recipe.author.username %></p>
            <% } %>
            <% if (recipe.description) { %>
                <p class="card-text"><%= recipe.description %></p>
            <% } %>
            <div class="d-flex justify-content-between align-items-center">
                <a href="/recipes/<%= recipe.id %>" class="btn btn-outline-primary">View Recipe</a>
                <% if (locals.user) { %>
                    <button 
                        class="btn btn-outline-secondary btn-sm save-recipe-btn"
                        onclick="toggleSaveRecipe('<%= recipe.id %>', this)"
                        data-saved="<%= recipe.isSaved ? 'true' : 'false' %>"
                    >
                        <i class="bi bi-bookmark<%= recipe.isSaved ? '-fill' : '' %>"></i>
                    </button>
                <% } %>
            </div>
        </div>
    </div>
</div> 