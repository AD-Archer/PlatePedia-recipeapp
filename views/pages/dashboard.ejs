<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PlatePedia - Discover Video Recipes & Cooking Tutorials</title>
    <%- include('../partials/meta') %>
    <%- include('../partials/bootstrap') %>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <%- include('../partials/alerts') %>
        
        <!-- Popular Recipes Section -->
        <section class="mb-5">
            <%- include('../partials/dashboard/popularrecipes') %>
        </section>

        <!-- Categories Section -->
        <section class="mb-5">
            <% if (locals.groupedCategories) { %>
                <div class="section-content">
                    <h2 class="mb-4">Browse Categories</h2>
                    <div class="row g-4">
                        <% Object.entries(groupedCategories).forEach(([type, categories]) => { %>
                            <% if (categories.length > 0) { %>
                                <div class="col-12 mb-4">
                                    <h3 class="h5 mb-3 text-muted text-capitalize fw-bold"><%= type %></h3>
                                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-3">
                                        <% categories.forEach(category => { %>
                                            <div class="col">
                                                <a href="/recipes/browse?category=<%= category.id %>" 
                                                   class="text-decoration-none">
                                                    <div class="card category-card h-100">
                                                        <% if (category.imageUrl) { %>
                                                            <img src="<%= category.imageUrl %>" 
                                                                 class="card-img-top" 
                                                                 alt="<%= category.name %>"
                                                                 style="height: 120px; object-fit: cover;">
                                                        <% } else { %>
                                                            <img src="<%= category.getDefaultImage() %>" 
                                                                 class="card-img-top" 
                                                                 alt="<%= category.name %>"
                                                                 style="height: 120px; object-fit: cover;">
                                                        <% } %>
                                                        <div class="card-body">
                                                            <h6 class="card-title text-center mb-1">
                                                                <%= category.name %>
                                                            </h6>
                                                            <p class="text-muted text-center small mb-0">
                                                                <%= category.dataValues.recipeCount || 0 %> recipes
                                                            </p>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>
                        <% }); %>
                    </div>
                </div>
            <% } %>
        </section>

        <!-- Suggested Users Section (if logged in) -->
        <% if (locals.user) { %>
            <section class="mb-5">
                <%- include('../partials/dashboard/suggestedusers') %>
            </section>
        <% } %>

        <!-- Recent Recipes Section -->
        <section class="mb-5">
            <%- include('../partials/dashboard/recent') %>
        </section>
    </div>

    <%- include('../partials/footer') %>

    <script>
        function goToRecipe(id) {
            window.location.href = `/recipes/${id}`;
        }
    </script>
</body>
</html> 